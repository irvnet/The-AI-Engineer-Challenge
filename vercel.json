{
    "version": 2,
    "builds": [
      { 
        "src": "frontend/package.json", 
        "use": "@vercel/static-build",
        "config": {
          "buildCommand": "cd frontend && npm install && npm run build",
          "outputDirectory": "frontend/dist"
        }
      },
      { 
        "src": "api/app.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      { 
        "src": "/api/(.*)", 
        "dest": "api/app.py"
      },
      { 
        "src": "/assets/(.*)",
        "dest": "frontend/dist/assets/$1"
      },
      { 
        "src": "/(.*)",
        "dest": "frontend/dist/index.html"
      }
    ]
  } 